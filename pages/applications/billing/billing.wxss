@import '/utils/template/css/writeInfo.wxss';
.form_btn{
  display: flex;
  height: 88rpx;
  background: #FFFFFF;
  border-radius: 8px 0px 0px 8px;
  margin-top: 48rpx;
  margin-bottom: 64rpx;
}
.form_btn button{
  flex: 1;
  font-weight: 500;
  font-size: 28rpx;
  border-radius: 0rpx;
}
.form_btn .clear{
  background-color: #FFF;
  color: #7E8BA8;
}
.form_btn .save{
  background-color: #2680F0;
  color: #FFF;
}
.write_info .row .icon{
  width: 40rpx;
  height: 40rpx;
  color: #FFF;
  background: #43C47C;
  border-radius: 4rpx;
  margin-right: 48rpx;
}
.write_info .row .receive{
  background: #F1AB3C;
}
.check .write_info {
  background-color: #FFF;
  border-radius: 12rpx;
  padding-left: 24rpx;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
}
.addGoods{
  height: 84rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #2680F0;
  background-color: #FFF;
  margin-bottom: 20rpx;
}
.addGoods text{
  width: 50%;
  display: block;
  text-align: center;
}
.addGoods .detele{
  border-right: 2rpx solid #aaa;
  color: #f02626;
}