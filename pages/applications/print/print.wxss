/* pages/applications/print/print.wxss */
Page{
  background-color: #f5f5f5;
  font-size: 30rpx;
}
.search-btn{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  height: 110rpx;
  display: flex;
}
.search-btn button{
  flex: 1;
  font-size: 32rpx;
  font-weight: 500;
  color: #fff;
  width: 50%;
  border-radius: 0rpx;
  background-color: #1890FF;
}
.search-btn .stop{
  background-color: #E7F0FE;
  color: #1890FF;
}
.p-box{
  overflow:auto;
  width: 100%;
}
.nolist{
  display: flex;
  padding-top: 40rpx;
  justify-content: center;
  color: #888;
}
.c-text{
  color: #000;
}
.devices_summary {
  margin-top: 30rpx;
  padding: 20rpx;
  font-size: 16px;
}
.device_list {
  height: 300px;
  margin: 50px 5px;
  margin-top: 0;
  border: 1px solid #EEE;
  border-radius: 5px;
  width: auto;
  overflow: auto;
}
.device_item {
  position: relative;
  border-bottom: 1px solid #EEE;
  padding: 10px;
  color: #666;
}
.connected_info {
  position: fixed;
  overflow:auto;
  bottom: 120rpx;
  width: 100%;
  background-color: #F0F0F0;
  padding: 10px;
  margin-bottom: env(safe-area-inset-bottom);
  font-size: 14px;
  max-height: 200px;
  box-shadow: 0px 0px 3px 0px;
}
 .operation {
  padding-right: 60rpx;
  padding-bottom: 20rpx;
  float: right;
}

.maskbox{
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.4);
  font-size: 32rpx;
}
.editbox{
  background-color: #fff;
  border-radius: 6rpx;
  width: 550rpx;
}
.e-l{
  display: flex;
  justify-content: center;
}
.e-title{
  line-height: 80rpx;
}
.inputbox{
  text-align: center;
  width: 500rpx;
  padding: 20rpx;
}
.btn-box{
  border-top: 1rpx solid #e4e4e4;
}
.c-btn{
  width: 50%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}
.cancel{
  color: #353535;
}
.confirm{
  color: #1aac19
}
.tip-box{
  padding-top: 20rpx;
}
.tip-title{
  padding:30rpx;
  color: #999999;
  padding: 20rpx 30rpx;
}
.tip-item{
  color: #888888;
  padding-left: 30rpx;
  line-height: 50rpx;
}
.device_item .cutLink{
  position: absolute;
  height: 60rpx;
  top: 0;
  bottom: 0;
  right: 20rpx;
  margin: auto;
  font-size: 28rpx;
}
.cutLinkHover{
  background-color: #fff;
  color:#000
}
