
.login{
  width: 100%;
  height: 100vh;
  position: relative;
}
.login .bg{
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 1;
}
.login .content{
  position: absolute;
  z-index: 100;
  left: 0;
  right: 0;
  top: 500rpx;
  bottom: 0;
  margin: auto;
}
.login_info{
  display: block;
  padding: 0 84rpx;
  box-sizing: border-box;
}
.login_info .input_out{
  height: 100rpx;
  border-bottom: 2rpx solid #eee;
  margin-bottom: 14rpx;
}
.input_out image{
  width: 44rpx;
  height: 44rpx;
  display: block;
  padding: 0 16rpx;
}
.input_out input{
  font-size: 28rpx;
  font-weight: 500;
  color: #17233D;
}
.changeLang{
  text-align: right;
  width: 100%;
  font-size: 24rpx;
  color: #7E8BA8;
  display: block;
  padding: 4rpx 0 124rpx 0;
}
.login_btn{
  height: 84rpx;
  background: linear-gradient(90deg, #00D4E6 0%, #00A5F9 100%);
  box-shadow: 0rpx 0rpx 8rpx 0rpx rgba(38, 128, 240, 0.81);
  border-radius: 48rpx;
  margin: auto;
  color: #FFF;
  font-weight: 500;
}
.login_text{
  font-size: 24rpx;
  font-weight: 500;
  color: #7E8BA8;
}
.forget_password{
  padding: 24rpx 0 158rpx 0;
}
.p-b12{
  padding-bottom: 12rpx;
}