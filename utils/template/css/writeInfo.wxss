.check {
  padding: 20rpx 24rpx 0 24rpx;
  background: #F8F8F8;
  min-height: 100vh;
  height: 100%;
  box-sizing: border-box;
}

.check .write_info {
  background-color: #FFF;
  border-radius: 12rpx;
  padding-left: 24rpx;
  padding-bottom: 28rpx;
  margin-bottom: 112rpx;
}

.write_info .row {
  width: 100%;
  height: 88rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-weight: 500;
  color: #515A6E;
  border-bottom: 2rpx solid #EEE;
}

.write_info .row text {
  display: inline-block;
  flex: 1;
}

.write_info .row input {
  display: inline-block;
  flex: 2;

}

.write_info .row picker {
  display: inline-block;
  flex: 2;
}

.write_info .row picker image {
  width: 32rpx;
  height: 32rpx;
}

.write_info .row .picker {
  font-size: 28rpx;
}

.write_info .row .yet {
  color: #C3CBD6;
}

.write_info .row .row_input {
  font-weight: 400;
  color: #C3CBD6;
}

.submit_btn {
  height: 96rpx;
  background: #1890FF;
  border-radius: 44rpx;
  color: #FFFFFF;
  width: 100%;
  font-weight: 500;
}

.bold {
  font-weight: 600;
  font-size: 29rpx;
}

.input-picker {
  position: relative;
  height: 88rpx;
}

.picker_list {
  position: absolute;
  top: 90rpx;
  width: 100%;
  z-index: 999;
  max-height: 600rpx;
  overflow: auto;
  border: 1px solid #e4e7ed;
  border-radius: 4px;
  background-color: #fff;
  box-shadow: 0 2px 12px 0 rgba(0, 0, 0, .1);
  box-sizing: border-box;
}
.picker_list .picker_item{
  padding: 20rpx;
  margin: 0 20rpx;
  border-bottom: 2rpx solid #EEE;
}
.picker_item_hover{
  background-color:rgba(0, 0, 0, .05);
}